<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFEFEF"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/user_fujin_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/user_fujin_category_selector" />

        <ImageView
            android:id="@+id/user_fujin_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/user_fujin_whole_city_selector" />

        <ImageView
            android:id="@+id/user_fujin_img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/user_fujin_sort_selector" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_fujin_img3"
            android:layout_marginTop="5dp"
            android:background="#d9d9d9"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/user_fujin_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="5dp"
                android:text="当前位置:"
                android:textAppearance="?android:attr/textAppearanceSmall" >
            </TextView>

            <TextView
                android:id="@+id/user_fujin_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在载入中。。。。"
                android:textAppearance="?android:attr/textAppearanceSmall" >
            </TextView>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>